    <div class="container">
    <div class="row">
    <% @projects.each do |project| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow-lg">
              <h2>&nbsp;&nbsp;&nbsp;<%= project.title %></h2>
                <div class="card-body">
                  <p> <%= project.description %></p>
                  <div class="d-flex justify-content-between align-items-center">
                  <% if user_signed_in? %>
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-info"><%= link_to 'Show', project %></button>
                      <button type="button" class="btn btn-sm btn-info"><%= link_to 'Edit', edit_project_path(project) %> </button>
                      <button type="button" class="btn btn-sm btn-info"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %> </button>
                    </div>
                  <% else %>
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-info"><%= link_to 'Show', project %></button>  
                    </div>
                  <%end%>
                  </div>
                </div>
              </div>
            </div>
      <% end %>
      </div>
      </div>
              
              
              


